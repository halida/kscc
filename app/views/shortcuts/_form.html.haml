= form_for @shortcut do |f|
  - if @shortcut.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shortcut.errors.count, "error")} prohibited this shortcut from being saved:"
      %ul
        - @shortcut.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :key
    = f.text_field :key
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :group_id
    = f.number_field :group_id
  .field
    = f.label :cheatsheet_id
    = f.number_field :cheatsheet_id
  .actions
    = f.submit 'Save'
