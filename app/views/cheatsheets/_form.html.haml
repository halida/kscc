= form_for @cheatsheet do |f|
  - if @cheatsheet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cheatsheet.errors.count, "error")} prohibited this cheatsheet from being saved:"
      %ul
        - @cheatsheet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
